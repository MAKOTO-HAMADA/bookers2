<p id="notice"><%= flash[:notice] %></p>

<!-- コンテナ全体 -->
<div class="container px-5 px-sm-0">
  <div class="row">
    
    <!-- 中央全体 -->
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      
      <h1>User info</h1>
      
      <!-- バリデーション → エラーメッセージ出力 -->
      <% if @user.errors.any? %>
        <%= @user.errors.count %>error prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="user_title">Name</label>
          <%= f.text_field :name, class: "form-control name" %>
        </div>
        <div class="form-group">
          <label for="user_title">Name</label>
          <%= f.file_field :profile_image, accept: "image/*", class: "form-control-file user_image" %>
        </div>
        <div class="form-group">
          <label for="user_opinion">Opinion</label>
          <%= f.text_field :introduction, class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
    
  </div>
</div>