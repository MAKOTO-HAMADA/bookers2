<!-- New Book -->
<h2 class="mt-3">New book</h2> <!-- index, @book = Book.new -->
<%= form_with model: list do |f| %>
  <div class="form-group">
    <label for="new_label">Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <label for="new_label">Opinion</label>
    <%= f.text_area :body %>
  </div>
  <div class="form-group">
    <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
  </div>
<% end %>